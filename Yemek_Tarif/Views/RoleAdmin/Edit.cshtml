@model Yemek_Tarif.Models.RoleEditModel
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>
<h2>ROLE EDİT</h2>
<hr />
    @using (Html.BeginForm())
    {

        <input type="hidden" name="RoleName" value="@Model.Role.Name" />
        <input type="hidden" name="RoleId" value="@Model.Role.Id" />


        <div class="panel panel-primary">
            <div class="panel-heading">
                Add to @Model.Role.Name
            </div>
            <table class="table table-striped">
                @if (Model.NonMembers.Count() == 0)
                {
                    <tr> <td colspan="2"> Bu role eklenebilecek kullanıcı yok</td></tr>
                }
                else
                {
                    <tr>
                        <td>
                            User ID
                        </td>
                        <td>
                            Role
                        </td>
                    </tr>
                    foreach (var user in Model.NonMembers)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td><input type="checkbox" name="IdsToAdd" value="@user.Id" /></td>
                        </tr>
                    }
                }
            </table>

        </div>

        <div class="panel panel-primary">
            <div class="panel-heading">
                Remove From @Model.Role.Name
            </div>
            <table class="table table-striped">
                @if (Model.Members.Count() == 0)
                {
                    <tr> <td colspan="2"> Bu role eklenmiş bir kullanıcı yok</td></tr>
                }
                else
                {
                    <tr>
                        <td>
                            User ID
                        </td>
                        <td>
                            Role
                        </td>
                    </tr>
                    foreach (var user in Model.Members)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td><input type="checkbox" name="IdsToDelete" value="@user.Id" /></td>
                        </tr>
                    }
                }
            </table>

        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    }

