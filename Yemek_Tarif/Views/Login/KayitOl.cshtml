@model Yemek_Tarif.Models.tbl_kullanicilar
@{
    /**/

    ViewBag.Title = "KayitOl";
    Layout = "~/Views/shared/_layout.cshtml";
}
<section class="page-title" style="background-image:url(/images/background/17.png)">
    <div class="auto-container">
        <h1>Kayıt Ol</h1>
    </div>
</section>

<div class="register-container margin">
    <div class="top-layer" style="background-image:url(/images/background/20.png)"></div>
    <div class="bottom-layer" style="background-image:url(/images/background/21.png)"></div>
    <div class="auto-container">
        <div class="inner-container">
            <div class="row clearfix">

                <!-- Image Column -->
                <div class="image-column col-lg-6 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <div class="image">
                            <img src="/images/kayit2.jpg" alt="">
                        </div>
                    </div>
                </div>

                <!-- Form Column -->
                <div class="form-column col-lg-6 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <div class="pattern-layer" style="background-image:url(/images/background/18.png)"></div>
                        <div class="pattern-layer-2" style="background-image:url(/images/background/19.png)"></div>
                        @*<a href="#" class="facebook-login"><span class="fa fa-facebook-f"></span>&nbsp; Login In with Facebook</a>
                            <div class="fill">FORMU DOLDURUN</div>*@

                        <!-- Register Form -->
                        <div class="register-form">

                            <!-- Register Form -->
                            @Html.ValidationSummary()

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label> Kullanıcı Adı</label>

                                    @Html.TextBoxFor(i => i.KullaniciAdi, new { @class = "form-control" })

                                </div>

                                <div class="form-group">

                                    <label> Şifre</label>
                                    @Html.TextBoxFor(i => i.Sifre, new { @class = "form-control", type = "password" })
                                </div>

                                <div class="form-group">
                                    <label> Adı</label>
                                    @Html.TextBoxFor(i => i.Adi, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label> Soyadı</label>
                                    @Html.TextBoxFor(i => i.Soyadi, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @*<div class="check-box"><input type="checkbox" name="shipping-option" id="account-option">   <label for="account-option">I have read and accept the Terms and Privacy Policy</label></div>*@
                                    <br />
                                    <div style="margin-left:auto;">
                                        Zaten Bir Hesabın mı var?<a href="/Login/Index"> &ensp; Giriş Yap</a>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button class="theme-btn btn-style-one" type="submit" name="submit-form"><span class="txt">Kayıt Ol</span></button>

                                </div>








                            }
                        </div>
                        <!-- End Register Form -->

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
