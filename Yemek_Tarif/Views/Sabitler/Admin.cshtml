@model IEnumerable<Yemek_Tarif.Models.tbl_Yemekler>
@*@model Kategori*@
@{
    /**/

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>

    <link href="~/script/csss/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/script/css/bootstrap.css" rel="stylesheet">
    <link href="~/script/css/ana.css" rel="stylesheet">
    <link href="~/script/css/responsive.css" rel="stylesheet">
    <!-- CSS only -->
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">*@
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">

    <!-- Responsive -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

    <!--[if lt IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script><![endif]-->
    <!--[if lt IE 9]><script src="js/respond.js"></script><![endif]-->
</head>

<body>



    <div>
        <a href="/Login/LogOut/" class="btn btn-info btn-lg butonn">
            <span class="glyphicon glyphicon-log-out"></span> Çıkış Yap
        </a>
    </div>

    <h2><a href="/Default/Index" class="bi bi-arrow-return-left yazı"> Siteye Geri Dön</a></h2>


    <div>

    </div>
    <div class="container">


        <h1 align="center">ADMİN KONTROL PANELİ</h1>
        @if (Session["username"] != null)
        {<text > Welcome @Session["username"].ToString() </text>}



    </div>
    <br /><br /><br /><br /><br />
    <div class="container">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width:10%" scope="col">Yemek No</th>
                    <th style="width:15%" scope="col">Yemek Adı</th>
                    <th style="width:45%" scope="col">Kullanıcı Adı</th>
                    <th style="width:15%" scope="col">Yemek Kategori</th>
                    <th style="width:15%" scope="col">Malzeme Miktarı</th>

                    <th style="width:15%" scope="col">İşlemler</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Yemekid</td>
                        <td>@item.YemekAd</td>
                        <td>@item.KullanıcıAdı</td>

                        @if (item.Kategoriid == null)
                        // üründen gelen kategori id boş ise
                        {
                            <td>Ürün Kategorisi Belirtilmemiş</td>
                            // bunu yazdır
                        }
                        else
                        //eğer bir id değeri geliyorsa
                        {
                            <td>@item.tbl_Kategoriler.KategoriAd</td>// kategorinin adını yazdır
                        }

                        <td>@item.YemekMalzeme</td>


                        <td>
                            <a href="/Sabitler/Silme/@item.Yemekid" id="sil" onclick="return confirm('Emin misin?')"><span class="bi bi-trash" title="Sil"></span></a>
                            <a href="/Sabitler/YemekGuncelle?YemekNo=@item.Yemekid" title="Güncelle"><span class="bi bi-pen"></span></a>
                        </td>

                    </tr>



                }
            </tbody>
        </table>

    </div>
</body>

</html>
<style>
    .yazı {
        float: left;
        margin-top: 30px;
        margin-left: 30px;
    }

    .butonn {
        margin-top: 40px;
        margin-right: 40px;
        float: right;
        /*margin-left: 500px;*/
    }
</style>
